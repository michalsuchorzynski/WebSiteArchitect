<UserControl x:Class="WebSiteArchitect.AdminApp.Controls.Layout.Label"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebSiteArchitect.AdminApp.Controls.Layout"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             MouseRightButtonDown="LayoutControl_MouseRightButtonDown"
             MouseLeftButtonDown="LayoutControl_MouseLeftButtonDown">
    <Grid Style="{StaticResource Label}">
        <Label HorizontalContentAlignment="Stretch">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="Domyślny tekst"/>
            </Label.Content>
        </Label>
    </Grid>
</UserControl>
