<UserControl x:Class="WebSiteArchitect.AdminApp.Controls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebSiteArchitect.AdminApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="ImgButton">
    <Button Click="Button_Click" Style="{StaticResource ImgButtonStyle}">
        <WrapPanel>
            <Image Source="{Binding ElementName=ImgButton, Path=ImageSource}"/>
            <TextBlock Text="{Binding ElementName=ImgButton, Path=Text}" />
        </WrapPanel>
    </Button>
</UserControl>
