<Window x:Class="WebSiteArchitect.AdminApp.Views.Property"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:WebSiteArchitect.AdminApp.Views"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Property" ResizeMode="NoResize" Height="710" Width="210" Left="-6" Top="25" Topmost="True">
    <Grid>
        <StackPanel>
            <Label  Content="Wartość" ></Label>
            <TextBox Text="{Binding Value, Mode=TwoWay}"></TextBox>
            <Label Content="Rozmiar" ></Label>
            <TextBox Text="{Binding Size, Mode=TwoWay}"></TextBox>
            <Label Content="Wysokość" ></Label>
            <TextBox Text="{Binding Height, Mode=TwoWay}"></TextBox>
            <Label Content="Rozmiar czcionki" ></Label>
            <TextBox Text="{Binding FontSize, Mode=TwoWay}"></TextBox>
            <Label Content="Tekst w poziomie" ></Label>
            <ComboBox x:Name="combox_textAlign" SelectedItem="{Binding TextAlign, Mode=TwoWay}"></ComboBox>
            <Label Content="Kolor czcionki" ></Label>
            <wpfTool:ColorPicker  DisplayColorAndName="True" SelectedColor="{Binding Path=FontColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Kolor tła" ></Label>
            <wpfTool:ColorPicker  DisplayColorAndName="True" SelectedColor="{Binding Path=BackgroundColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label  x:Name="labelContentColor" Content="Kolor elementu"  Visibility="Hidden" ></Label>
            <wpfTool:ColorPicker x:Name="txtContentColor"  DisplayColorAndName="True" SelectedColor="{Binding Path=ContentColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Visibility="Hidden"/>
            <Label x:Name="labelGoto" Content="Przekieruj do" Visibility="Hidden"></Label>
            <TextBox x:Name="txtGoto" Text="{Binding GoTo, Mode=TwoWay}" Visibility="Hidden"></TextBox>
            
            
        </StackPanel>

    </Grid>
</Window>
